<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tabed.DefectsInjected">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Defects Injected in Phase"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Fase"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="30sp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Cantidad"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="30sp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:text="%"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="30sp" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="PLAN"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cantidadplan"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="20"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/porcenrajeplan"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />


        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="DLD"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cantidadld"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="20"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/porcenrajedld"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="CODE"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cantidadcode"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="20"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/porcenrajecode"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="COMPILE"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cantidadcompile"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="20"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/porcenrajecompile"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="UT"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cantidadut"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="20"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/porcenrajeut"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <TextView
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="PM"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/cantidadpm"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="20"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/porcenrajepm"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />

        </GridLayout>
    </LinearLayout>

</RelativeLayout>